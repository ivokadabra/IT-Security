#Aufgabe 3

#Aufgabe 4

iptables -P INPUT DROP
iptables -P OUTPUT DROP
iptables -P FORWARD DROP

iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth0 -j ACCEPT
iptables -A FORWARD -i eth0 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT

iptables -t nat -A POSTROUTING -o eth1 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth1 -j ACCEPT
iptables -A FORWARD -i eth1 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT


iptables -t nat -A POSTROUTING -o eth2 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth2 -j ACCEPT
iptables -A FORWARD -i eth2 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT



iptables -t nat -A POSTROUTING -o eth3 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth3 -j ACCEPT
iptables -A FORWARD -i eth3 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT



iptables -t nat -A POSTROUTING -o eth4 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth4 -j ACCEPT
iptables -A FORWARD -i eth4 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT


iptables -t nat -A POSTROUTING -o eth6 -j MASQUERADE
iptables -A FORWARD -i eth5 -o eth6 -j ACCEPT
iptables -A FORWARD -i eth6 -o eth5 -m state \--state RELATED,ESTABLISHED -j ACCEPT



